{
    "id": "com.github.quaternion",
    "rename-icon": "quaternion",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.12",
    "sdk": "org.kde.Sdk",
    "command": "quaternion",
    "finish-args": [
        "--share=ipc",
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "libqmatrixclient",
            "buildsystem": "cmake-ninja",
            "cleanup": ["/include", "/lib", "/share", "/bin/qmc-example"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/quotient-im/libqmatrixclient.git",
                    "tag": "0.5.2"
                }
            ]
        },
        {
            "name": "quaternion",
            "buildsystem": "cmake-ninja",
	    "cleanup": ["/lib"],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/quotient-im/Quaternion.git",
                    "tag": "0.0.9.4c-rc"
                }
            ]
        }
    ]
}
